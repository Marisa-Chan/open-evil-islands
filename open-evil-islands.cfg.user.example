[windows-mingw-x64]
BINARY_PATHS = c:\Bin\MSYS2\mingw64\bin;c:\Program Files (x86)\Inno Setup 5;c:\Program Files (x86)\Windows Kits\8.1\bin\x64
INCLUDE_PATHS = c:\Bin\MSYS2\mingw64\include\freetype2
QT_PATH = c:\Bin\MSYS2\mingw64
