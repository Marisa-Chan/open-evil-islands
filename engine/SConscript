import utils
import os

Import("env")

env = env.Clone(
    tools=["rc"],
    RCBUILDPATH="$ESCONS_BUILD_PATH",
    RCBUILDOBJPATH=os.path.join("$ESCONS_OBJECTS_BUILD_PATH"),
)

env.VariantDir(os.path.join("$ESCONS_OBJECTS_BUILD_PATH", "engine"), "sources", duplicate=False)

sources = [os.path.join("$ESCONS_OBJECTS_BUILD_PATH", "engine", node.name) for node in utils.filter_sources(env, env.Glob(os.path.join("sources", "*.cpp")))]
resources = env.Glob(os.path.join("resources", "resource.cerc"))

targets = [env.Library(os.path.join("$ESCONS_LIBRARY_BUILD_PATH", "engine"), sources + resources)]

Return("targets")
