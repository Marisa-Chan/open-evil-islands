#!/usr/bin/env python
# -*- coding: utf-8 -*-

import os.path

VariantDir("build", "src", duplicate=False)

Import("env")
env = env.Clone()

env.AppendUnique(
	CPPPATH=[os.path.join("#game", "include")],
	LIBPATH=[os.path.join("#game", "lib")],
	LINKFLAGS=["-Wl,-rpath,game/lib"],
	LIBS=["game", "glut"],
)

targets = [env.Program(os.path.join("bin", "texview"),
				[os.path.join("build", node.name)
		 			for node in env.Glob(os.path.join("src", "*.c"))])]

Return("targets")
